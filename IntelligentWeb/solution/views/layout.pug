doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        title Single page web app

        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js")
        script window.jQuery || document.write('<script src="/scripts/jquery.min.js"><\/script>');

        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')
        script.
            if(typeof($.fn.modal) === 'undefined') {
                document.write('<script src="/scripts/js/bootstrap.min.js"><\/script>')
            }

        link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
        .hidden#bootstrapCssTest
        script.
            $(function () {
                if ($('#bootstrapCssTest').is(':visible')) {
                    $('head').prepend('<link rel="stylesheet" href="/scripts/css/bootstrap.min.css">');
                }
            })

        link(href='https://cdnjs.cloudflare.com/ajax/libs/open-iconic/1.1.1/font/css/open-iconic-bootstrap.min.css', rel='stylesheet')
        // TODO: Need a fallback to /node_modules/open-iconic/font/css/open-iconic-bootstrap.min.css
        link(rel='stylesheet', href='/stylesheets/style.css', type='text/css')
        link(href='https://fonts.googleapis.com/css?family=Raleway|Roboto', rel='stylesheet')
    body
        block header
            //- Purposefully empty, this allows the custom index header to be added in-page

        block navbar
            nav.navbar.navbar-expand-sm.sticky
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a.nav-link.nav-wide(href='#') Restaurants near Me
                    li.nav-item
                        a.nav-link.nav-wide(href='#') Write a Review
                    li.nav-item
                        a.nav-link.nav-wide(href='#') Recommendations

                ul.navbar-nav
                    li.nav-item
                        a.nav-link.nav-thin(href="{{ url('/login') }}") Login
                    li.nav-item
                        a.nav-link.nav-thin(href="{{ url('/register') }}") Sign Up



        block content

        block footer
            footer.container-fluid
                .row.full-height
                    .offset-md-3.col-md-3.vert-center-parent
                            .vert-center-child
                                ul.list-inline
                                    li.list-inline-item
                                        a(href="/about") About
                                    li.list-inline-item
                                        a(href="/contact") Contact Us
                                    li.list-inline-item
                                        a(href="/accessibility") Accessibility
                    .col-md-3.vert-center-parent
                            .vert-center-child
