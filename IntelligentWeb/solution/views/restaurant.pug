extends partials/layout


block content
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css')
    br
    .container
        .row
            .col-7
                .row
                    .col
                        h1.d-inline= restaurant.name
                        p.restaurant-category.price-icon.d-inline ££
                .row
                    .col
                        .restaurant-stars
                            span.oi.oi-check.oi-star(aria-hidden='true', style = 'color: orange')
                            span.oi.oi-check.oi-star(aria-hidden='true', style = 'color: orange')
                            span.oi.oi-check.oi-star(aria-hidden='true', style = 'color: orange')
                            span.oi.oi-check.oi-star(aria-hidden='true')
                            span.oi.oi-check.oi-star(aria-hidden='true')
                .row
                    .col
                        each category in restaurant.categories
                            p.restaurant-category= category.name
                .row
                    .col
                        p= restaurant.description
                .row
                    .col
                        h4
                            span.oi.oi-browser.oi-space(aria-hidden='true')
                            | Visit official
                            a(href=`${restaurant.url}`, target='_blank')    page
                .row
                    .col
                        h4
                            span.oi.oi-book.oi-space(aria-hidden='true')
                            | See
                            a(href=`${restaurant.menu}`, target='_blank')   menu
                .row
                    .col
                        h4
                            span.oi.oi-phone.oi-space(aria-hidden='true')
                            |Contact us:
                            a(href=`tel: ${restaurant.phone}`)  #{restaurant.phone}
                .row
                    .col
                        .wrapper-gret
                            form#review-form(action='/review' method='POST')
                                h5 Have you been to this restaurant? Let us know what you think!
                                .form-row
                                    .form-group.col
                                        .stars
                                            input#star-5.star(type='radio', name='star')
                                            label.star(for='star-5')
                                                span.oi.oi-star
                                            input#star-4.star(type='radio', name='star')
                                            label.star(for='star-4')
                                                span.oi.oi-star
                                            input#star-3.star(type='radio', name='star')
                                            label.star(for='star-3')
                                                span.oi.oi-star
                                            input#star-2.star(type='radio', name='star')
                                            label.star(for='star-2')
                                                span.oi.oi-star
                                            input#star-1.star(type='radio', name='star')
                                            label.star(for='star-1')
                                                span.oi.oi-star
                                .form-row
                                    .form-group.col
                                        label(for='review-title') Title
                                        input#review-title(type='text', name='title', placeholder='Title of review' required)
                                .form-row
                                    .form-group.col
                                        label(for='review-message') Review
                                        textarea#review-message(name='message', placeholder='Your message', style='height:100px' required)
                                .form-row
                                    .form-group.col
                                        input(type='submit', value='Submit')

            .col-5
                .row
                    .col
                        img(src="/images/site/sheffield-centre-scaled.jpg" alt="Sheffield centre")

                .row
                    .col
                        h4 Includes:
                .row
                    .col
                        each value, key in restaurant.features.toJSON()
                            if value
                                p.restaurant-category= key
                .row
                    .col
                        h4 Open hours:
                .row
                    .col-5.text-center
                        p Mon
                    .col-7.text-center
                        p 9:00 - 21:00

                .row
                    .col
                        h3 Address: #{restaurant.address.formattedAddress}
                        label(for='restaurant-map')
                        #restaurant-current-map
        .row
            h3 Reviews


    script const coordinates = JSON.parse(`[#{restaurant.location.coordinates}]`)
    script(type='text/javascript', src='/javascripts/restaurant.js')
    script(src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDlmGXTAyXPQy1GX02s8UDm1OLBNz6zia0&callback=initMap')

