extends mixins/layout

block header
    #index-head
        .container.vert-center-parent
            .row.vert-center-child
                .col-md-12
                    form#index-search-form
                        #main-logo
                        .input-group#index-search-group
                            .input-group-prepend
                                select.btn
                                    option(value='', selected) Quick Filter
                                    optgroup(label='Cuisine')
                                        option Italian
                                        option Asian
                                        option French
                                        option American
                                        option British
                                    optgroup(label='Price Range')
                                        option £
                                        option ££
                                        option £££
                                        option ££££
                            input#search-input.form-control.no-border(name='searchQuery' type='text', placeholder='Search by Cuisine, Keyword, Location etc.', aria-label='Text input with dropdown button')
                            .input-group-append
                                button.btn#searchbutton
                                    span.oi.oi-magnifying-glass(aria-hidden='true')

block content
    br
    .container
        .row
            .col-md-4
                h5.text-center
                    span.oi.oi-check.oi-space(aria-hidden='true')
                    | Find the best restaurants
                img.index-image.img-thumbnail(src="/images/site/sheffield-centre-scaled.jpg" alt="Sheffield centre")
            //    TODO: Scale images to be the same ratio, then fit the CSS to that ratio to avoid stretching - GR
            .col-md-4
                h5.text-center
                    span.oi.oi-thumb-up.oi-space(aria-hidden='true')
                    | Contribute your reviews
                img.index-image.img-thumbnail(src="/images/site/rate-restaurant-scaled.jpg" alt="")
            .col-md-4
                h5.text-center
                    span.oi.oi-magnifying-glass.oi-space(aria-hidden='true')
                    | Search by cuisine type
                img.index-image.img-thumbnail(src='/images/site/cuisine-search-scaled.jpg' alt='Pizza')

    script(type='text/javascript', src='/javascripts/index.js')